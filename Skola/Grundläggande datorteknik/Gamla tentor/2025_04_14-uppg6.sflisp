; n1 = M(Adr)
; n2 = M(Adr + 1)
; Subroutine: n1 + n2 -> A
; Adr is stored in X
	ORG $0
NUMS:
	FCB	$12, $34 ; $12 + $34 = $46

	ORG $20
main:
	LDX NUMS
	JSR add_nums

	ORG $30
add_nums:
	LDA 0,X		; M(X) -> A
	PSHC		; CC -> M(SP); SP - 1 -> SP
	ADDA 1,X 	; A + M(X + 1) -> A
	PULC

	RTS


	ORG $FF
	LDA $20